@model List<TaskItem>

<!DOCTYPE html>
<html>
<head>
    <title>To-Do List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h1>To-Do List</h1>
        <form method="post" asp-action="AddTask">
            <div class="input-group mb-3">
                <input type="text" name="title" class="form-control" placeholder="New task" required />
                <button class="btn btn-primary" type="submit">Add</button>
            </div>
        </form>

        <h2>Pending Tasks</h2>
        <ul class="list-group">
            @foreach (var task in Model.Where(t => !t.IsCompleted))
            {
                <li class="list-group-item">
                    <form method="post" asp-action="MarkAsCompleted" class="d-inline">
                        <input type="hidden" name="id" value="@task.Id" />
                        <button class="btn btn-sm btn-success">✔</button>
                    </form>
                    @task.Title
                    <form method="post" asp-action="DeleteTask" class="d-inline float-end">
                        <input type="hidden" name="id" value="@task.Id" />
                        <button class="btn btn-sm btn-danger">✖</button>
                    </form>
                </li>
            }
        </ul>

        <h2 class="mt-4">Completed Tasks</h2>
        <ul class="list-group">
            @foreach (var task in Model.Where(t => t.IsCompleted))
            {
                <li class="list-group-item">@task.Title</li>
            }
        </ul>
    </div>
</body>
</html>
